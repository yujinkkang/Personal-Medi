# -*- coding:utf-8 -*-
# controller

from flask import Flask, request, render_template
app = Flask(__name__)

@app.route('/')
def root():
    return '''
        <a href="/hello">hello</a><br/>
        <input type="button" value="hello" onclick="location.href='/hello/name'"> 
    '''
    
@app.route('/hello')
def hello():
    return render_template('hello.html')